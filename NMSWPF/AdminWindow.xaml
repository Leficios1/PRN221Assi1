<Window x:Class="TrinhLekhoaWPF.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrinhLekhoaWPF"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="101,104,0,280" Grid.Row="1">
            <Button Content="Manage Account" Click="ManageAccountButton_Click" Margin="10"/>
            <Button Content="Create Report" Click="CreateReportButton_Click" Margin="10"/>
        </StackPanel>
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Navigated="MainFrame_Navigated" Margin="10,37,-10,-37"/>
        <Label Content="Welcome Back, ADMIN. What do want to do?" FontSize="20" Foreground="Red" HorizontalAlignment="Left" Margin="10,38,0,0" Grid.Row="1" VerticalAlignment="Top" Height="46" Width="478"/>
    </Grid>
</Window>
